<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#2D3091"
        app:titleTextColor="@android:color/white">

        <!-- RelativeLayout to manage the positioning of elements -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <!-- Title TextView aligned to the left -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="SELECT DATE RANGE"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- AutoCompleteTextView for Search Outlet aligned next to the title -->
            <AutoCompleteTextView
                android:id="@+id/outletSearch"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/toolbar_title"
                android:background="@drawable/rectangelbg"
                android:completionThreshold="1"
                android:hint="Search Outlet"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- Date Range Selection Layout aligned to the far right -->
            <LinearLayout
                android:id="@+id/dateRangeSelectionLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:gravity="end|center_vertical"
                android:orientation="horizontal">

                <!-- From Date Button -->
                <Button
                    android:id="@+id/fromDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:text="From Date"
                    android:textColor="@color/black" />

                <!-- To Date Button -->
                <Button
                    android:id="@+id/toDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/white"
                    android:text="To Date"
                    android:textColor="@color/black" />

                <!-- GET Button -->
                <Button
                    android:id="@+id/getButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:background="@color/green"
                    android:text="GET" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:padding="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">


                <!-- Current Month Performance Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Current Month Performance"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*">


                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Sales (YTD)"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Target (MTD)"
                                    android:textColor="@color/black" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:id="@+id/ytdSalesText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0.00"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/targetSalesText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0.00"
                                    android:textColor="@color/black" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Sales (MTD)"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="BTG"
                                    android:textColor="@color/black" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:id="@+id/mtdSalesText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0.00"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/btgText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0.00"
                                    android:textColor="@color/black" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Today's Calls Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Today's Calls"
                            android:textColor="@color/black"
                            android:textSize="18sp" />


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*">


                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Planned"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Completed"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Missed Calls"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:id="@+id/totalOrderCountPlannedText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/completedOrdersText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/missedCallsText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0"
                                    android:textColor="@color/black" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Productive"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Out Of Route"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />

                                <TextView
                                    android:fontFamily="@font/roboto_bold"
                                    android:padding="8dp"
                                    android:text="Sync Status"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </TableRow>


                            <TableRow>

                                <TextView
                                    android:id="@+id/invoiceCountText"
                                    android:fontFamily="@font/roboto_regular"
                                    android:padding="8dp"
                                    android:text="0"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/outOfRouteCountText"
                                    android:padding="8dp"
                                    android:text="0" />

                                <ImageView
                                    android:id="@+id/syncImage"
                                    android:layout_gravity="center"
                                    android:padding="8dp" />
                                <!--                                    android:src="@drawable/syncdone"-->

                            </TableRow>


                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- CardView containing LineChart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:paddingBottom="8dp"
                        android:text="Sales  Returns Trend"
                        android:textColor="@color/black"
                        android:textSize="18sp" />


                    <!-- Line Chart -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginBottom="16dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <!-- Sales and Returns Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:weightSum="4">


                <!-- Total Sales Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/blue"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/totalSalesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Sales: 0"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Total Returns Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/Red"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/totalReturnsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Returns: 0"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Sales Percentage Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/salesPercentageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sales %: 0%"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <!-- Return Percentage Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FFB6C1"

                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/returnPercentageText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Return %: 0%"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
