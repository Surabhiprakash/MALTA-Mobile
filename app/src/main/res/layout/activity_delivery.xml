<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Customer CardView 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/customerIcon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/users" />

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/customerIcon1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/customerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/customerAddress1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Green Shop"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/quickAccessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:text="Quick Access"
            android:textSize="18sp" />

        <!-- Customer CardView 8 (New Order) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/phone"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/phones"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/phone"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Order"
                       android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/orderdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:text="Order goods on behalf of the customer"
                        android:textSize="14sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/sale"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/box"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/sale"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newsale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Sale"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/saledesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:text="Register sale and raise invoice"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardReturn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/returns"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/returns"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/returns"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newreturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Return"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/returndesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Return goods"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/deliver"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/van"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/deliver"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newdel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delivery"
                       android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/deliverdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:text="Deliver goods against existing order"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/payment"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/card"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/payment"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Payment"
                      android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/paydesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:text="Collect payments from previous transactions"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/customerCardView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_margin="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="16dp">

                <!-- Customer Icon (Replace with your customer icon) -->
                <ImageView
                    android:id="@+id/survey"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/survey"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/circleshape"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"/>

                <!-- Linear layout to hold TextViews next to the ImageView -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/survey"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <!-- Customer Name -->
                    <TextView
                        android:id="@+id/newsur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Survey"
                      android:textColor="@color/black"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="18sp" />

                    <!-- Customer Address -->
                    <TextView
                        android:id="@+id/surveydesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:text="Fill-in predefined survey"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/next_button"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>
</ScrollView>