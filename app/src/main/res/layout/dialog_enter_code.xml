<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:background="#FFFFFF"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#08457c"
        android:padding="10dp"
        android:text="Select "
        android:id="@+id/mealSerViceDia"
        android:fontFamily="@font/roboto_regular"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/dialog_enter_remarks"
        android:layout_width="469dp"
        android:layout_height="52dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectangelbg"
        android:hint="Enter Code"
        android:inputType="text"
        android:fontFamily="@font/roboto_regular"
        android:layout_gravity="center"
        android:maxLines="1"
        android:textColor="@color/black"
        android:padding="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/dialog_ok_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="OK"
            style="@style/MyButtonStyle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@color/appColorpurple"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/tick"
            android:padding="10dp"/>

        <Button
            android:id="@+id/dialog_cancel_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            style="@style/MyButtonStyle"
            android:layout_weight="1"
            android:text="Cancel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/Red"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:drawableLeft="@drawable/cancel2"

            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>
