<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom shape with blue stroke -->
    <item
        android:bottom="2.5dp"
        android:left="2.5dp"
        android:right="2.5dp"
        android:top="2.5dp">
        <shape android:shape="oval">
            <stroke
                android:width="2.5dp"
                android:color="#00bfff" />
        </shape>
    </item>

    <!-- Top shape with pink stroke -->
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="oval">
            <stroke
                android:width="2.5dp"
                android:color="#ff99bb" />
        </shape>
    </item>
</layer-list>

